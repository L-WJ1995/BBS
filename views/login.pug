doctype html
html
  head
    title= "BBS登录"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/register_login.css')
  body
    form(action="/login" method="post")
      input(type="text" name="username" autofocus="autofocus" autocomplete="off" placeholder="请输入用户名")
      input(type="password" name="password"  placeholder="请输入密码")
      button(name="login" value="1")="登录"
      button(name="forgotPassword" value="2")="忘记密码"